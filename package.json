{
  "name": "enhanced-tab",
  "displayName": "Enhanced Tab",
  "description": "为编辑器标签页添加增强功能 | Add enhanced features to editor tabs",
  "version": "0.1.5",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gp5251/enhanced_tab"
  },
  "publisher": "paulgui",
  "icon": "src/logo.png",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Enhanced Tab",
      "properties": {
        "enhanced-tab.autoOpenFile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open file after copy/move operations | 复制/移动文件后自动打开文件"
        }
      }
    },
    "commands": [
      {
        "command": "enhanced-tab.deleteFile",
        "title": "Delete File"
      },
      {
        "command": "enhanced-tab.renameFile",
        "title": "Rename File"
      },
      {
        "command": "enhanced-tab.copyFile",
        "title": "Copy File"
      },
      {
        "command": "enhanced-tab.copyFileTo",
        "title": "Copy To..."
      },
      {
        "command": "enhanced-tab.moveTo",
        "title": "Move To..."
      },
      {
        "command": "enhanced-tab.resetFile",
        "title": "Reset File"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "enhanced-tab.deleteFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.renameFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.copyFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.copyFileTo",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.moveTo",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.resetFile",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "enhanced-tab.deleteFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.renameFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.copyFile",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.copyFileTo",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.moveTo",
          "group": "1_modification"
        },
        {
          "command": "enhanced-tab.resetFile",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.8"
  }
} 